<!DOCTYPE html>
<html lang="en">

<%- include('./partial/head.ejs') %>

    <body>
        <%- include('./partial/nav.ejs') %>

            <article>
                <div class="info">
                    <span>
                        <%= post.createdAt.toLocaleDateString() || "No Date" %>
                    </span>
                    <span>
                        <%= post.author %>
                    </span>
                </div>
                <h1>
                    <%= post.title %>
                </h1>
                <p>
                    <%= post.text %>
                </p>
                <a href="/edit/<%= post.id %>" class="btn-edit">
                    <i class="fas fa-edit"></i>
                </a>
                <button class="btn-delete" data-id="<%= post.id %>">
                    <i class="fas fa-trash-alt" data-id="<%= post.id %>"></i>
                </button>
            </article>
    </body>
    <script>
        document.addEventListener('click', (e) => {
            const id = e.target?.dataset?.id;

            if (id) {
                fetch(`/posts/${id}`, {
                    method: 'DELETE'
                }).then(() => {
                    window.location.href = '/posts'; // перенаправление после удаления на страницу posts
                })
            }
        });
    </script>

</html>